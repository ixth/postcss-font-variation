{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:jest/recommended",
    "prettier"
  ],
  "rules": {
    "arrow-body-style": ["error", "as-needed"],
    "curly": ["error", "all"],
    "jest/expect-expect": "off",
  }
}
